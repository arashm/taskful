<div id="tasks">
  <table>
    <thead>
      <tr>
        <th>Task</th>
        <th>Status</th>
        <th>Created at</th>
        <th>Due date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.status %></td>
          <td><%= task.created_at.to_formatted_s(:long) %></td>
          <td><%= task.due_date.to_formatted_s(:long) %></td>
          <td>
            <%= link_to "Show", task_path(task) %>
            <%= link_to "Edit", edit_task_path(task) %>
            <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: {
              confirm: "Are you sure?"
            } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New task", new_task_path, class: "btn" %>
